<h1>Your lists</h1>

<ul>
<% @lists.each do |list| %>
<li><%= link_to list.name, list_path(list) %>
<%= link_to del_list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
<i class="fa fa-trash" aria-hidden="true"></i>
<% end %>
</li>
<% end %>
</ul>

<p> <%= link_to "New list", new_list_path %></p>
